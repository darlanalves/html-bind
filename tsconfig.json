{
  "compileOnSave": true,
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es5",
    "importHelpers": true,
    "module": "es6",
    "noEmitHelpers": true,
    "lib": ["es6", "es7"]
  },
  "exclude": [
    "./dist/*.ts",
    "./dist/**/*.ts"
  ]
}